<odoo>
    <record id="view_darman_booking_list" model="ir.ui.view">
        <field name="name">darman.booking.list</field>
        <field name="model">darman.booking</field>
        <field name="arch" type="xml">
            <list string="Booking List">
                <field name="partner_id"/>
                <field name="name"/>
                <field name="mobile"/>
                <field name="partner_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_guests"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_darman_booking_form" model="ir.ui.view">
        <field name="name">darman.booking.form</field>
        <field name="model">darman.booking</field>
        <field name="arch" type="xml">
            <form string="Booking Form">
                <header>
                    <button name="action_open_hotel_search" type="object" string="ðŸ¨ Search Hotel" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_accept" type="object" string="Confirm" class="btn-primary oe_highlight" invisible="state not in('draft')"/>
                    <button name="action_decline" type="object" string="Decline" invisible="state not in('draft','confirmed')"/>
                    <button name="action_send_invoice" type="object" string="Send Invoice" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_mark_done" type="object" string="Mark Done" invisible="state != 'invioced'"/>
                    <button name="action_set_to_draft" type="object" string="Reset to Draft" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>      
                            <field name="partner_type"/>    
                            <field name="name" readonly="1"/>
                            <field name="mobile" readonly="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group string="Guest Information">
                            <field name="adult_count"/>
                            <field name="child_count"/>
                            <field name="child_age_1" invisible="child_count &lt; 1"/>
                            <field name="child_age_2" invisible="child_count &lt; 2"/>
                            <field name="child_age_3" invisible="child_count &lt; 3"/>
                            <field name="child_age_4" invisible="child_count &lt; 4"/>
                            <field name="child_age_5" invisible="child_count &lt; 5"/>
                            <field name="total_guests"/>
                        </group>
                        <group string="Hotel Booking Information" invisible="not hotel_id">
                            <field name="hotel_name" readonly="1"/>
                            <field name="hotel_city_id" readonly="1"/>
                            <field name="room_type_title" readonly="1"/>
                            <field name="rate_plan_title" readonly="1"/>
                            <field name="price_to_pay" readonly="1"/>
                            <field name="total_price" readonly="1"/>
                            <field name="currency" readonly="1"/>
                        </group>
                        <group>
                            <field name="description" widget="text" placeholder="Description"/>
                        </group>
                        <!-- Hidden fields for storing hotel data -->
                        <field name="hotel_id" invisible="1"/>
                        <field name="room_type_external_id" invisible="1"/>
                        <field name="rate_plan_id" invisible="1"/>
                        <field name="supplier_name" invisible="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_darman_booking" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">darman.booking</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_darman_booking_root" 
        name="Booking Management" 
        web_icon="darman_booking_simple,static/description/icon.png"
        sequence="10"/>
    <menuitem id="menu_darman_booking" 
        name="Bookings" 
        parent="menu_darman_booking_root" 
        action="action_darman_booking" 
        sequence="10"/>
</odoo>