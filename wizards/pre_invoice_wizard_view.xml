<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pre_invoice_wizard_form" model="ir.ui.view">
        <field name="name">daarman.pre.invoice.wizard.form</field>
        <field name="model">daarman.pre.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Pre Invoice Details">
                <sheet>
                    <group>
                        <group>
                            <field name="reference_number"/>
                            <field name="bill_number"/>
                            <field name="payment_bill_number"/>
                        </group>
                        <group>
                            <field name="total_amount"/>
                            <field name="discont"/>
                            <field name="payable_amount"/>
                            <field name="vat"/>
                            <field name="business_name"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="invoice_line_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="discount"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Confirm and Send Invoice" 
                            name="action_confirm" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pre_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Pre Invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">daarman.pre.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>